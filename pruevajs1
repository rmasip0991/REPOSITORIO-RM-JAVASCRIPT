// EJEMPLO DE EL SEMAFORO

var color = "VERDE";
color = color.toLowerCase();

if(color == "rojo") {
    console.log("no puedes pasar");
} else if(color == "ambar"){
    console.log("precaucion");
} else if(color == "verde"){
    console.log("adelante");
} else 
    console.log("no entiendo ese color");

console.log("......................")

